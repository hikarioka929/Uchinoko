<div class="container contain2">
    <div class="hukidasi">
        <h1>ジャンル一覧ページ</h1>

        <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
            ジャンル名
            <%= f.text_field :name %>
            <%= f.submit '追加' %>
        <% end %>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ジャンル</th>
                    <th scope="col">編集</th>
                </tr>
            </thead>
            <tbody>
            <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集", edit_admins_genre_path(genre.id) %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>