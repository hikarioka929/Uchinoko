<div class="container contain2">
    <div class="hukidasi">
        <h1>うちの子新規登録ページ</h1>
        <%= form_with model: @pet, local: true do |f| %>

            <div class="field">
                お名前<%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>

            <div class="field">
                性別
                <%= f.radio_button :sex,0, checked: "checked" %>男
                <%= f.radio_button :sex,1 %>女
            </div>

            <div class="field">
                年齢<%= f.number_field :age, min: 0 %>
            </div>

            <div class="field">
                写真<%= f.attachment_field :image %>
            </div>

            <div class="field">
                紹介文<%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
            </div>

            <div class="field">
                カテゴリ<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %>
            </div>

            <%= f.submit "新規登録" %>

        <% end %>
</div>