<div class="container contain2">
    <div class="hukidasi">
        <h1>みんなのうちの子ページ</h1>

        <table class="table">
            <thead>
                <th></th>
                <th>お名前</th>
                <th>紹介文</th>
                <th>性別</th>
                <th>年齢</th>
                <th>カテゴリ</th>
                <th></th>
            </thead>
            <tbody>
                <tr>
                    <% @pets.each do |pet| %>
                        <td>
                            <%= link_to pet_path(pet) do %>
                                <%= attachment_image_tag pet, :image, size: "100x100" %>
                            <% end %>
                        </td>
                        <td><%= pet.name %></td>
                        <td><%= pet.introduction %></td>
                        <td><%= pet.sex %></td>
                        <td><%= pet.age %></td>
                        <td><%= pet.genre_id %></td>
                        <td>
                            <%= link_to user_path(pet.user) do %>
                                <%= attachment_image_tag pet.user, :image, size: "50x50" %>
                            <% end %>
                            さんの家族
                        </td>
                    <% end %>
                </tr>
            </tbody>
        </table>
    </div>
</div>