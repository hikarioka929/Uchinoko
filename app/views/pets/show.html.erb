<div class="container contain2">
    <div class="hukidasi">
        <h1><%= @pet.name %>のページ</h1>
    </div>
        <div class="row">
        <div class="col-4">
            <p><%= attachment_image_tag @pet, :image, size: "300x300", class: "radius" %></p>
            <p>お名前:&emsp;<%= @pet.name %></p>
            <p>性別:&emsp;<%= @pet.sex %></p>
            <p>年齢:&emsp;<%= @pet.age %>才</p>
            <p><%= link_to "編集ページへ", edit_pet_path(@pet.id) %></p>
        </div>
        <div class="col-8">
            <div class="maste">
                <span class="tape">紹介文</span>
                <p><%= @pet.introduction %></p>
            </div>
        </div>
    </div
</div>